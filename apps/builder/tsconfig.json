{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/*"]
    },
    "target": "ES2022",
    "module": "es2022",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true
  }
}
